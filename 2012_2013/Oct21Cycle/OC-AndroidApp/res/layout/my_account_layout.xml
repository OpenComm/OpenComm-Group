<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="42.67dp"
        android:orientation="horizontal"
        android:background="@color/dark_grey">
        <ImageButton android:id="@+id/my_account_back_button"
            android:layout_width="10.67dp"
            android:layout_height="14dp"
            android:layout_marginTop="14.67dp"
            android:layout_marginLeft="10.67dp"
            android:src="@drawable/contacts_left_arrow"
            android:contentDescription="@string/desc"
            android:tint="@color/white"
            android:scaleType="centerInside"
            android:background="@color/dark_grey"
            android:onClick="backButtonClicked"/>
        <TextView android:id="@+id/my_account_name_title"
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.33dp"
            android:layout_marginLeft="6.33dp"
            android:text="@string/my_account"
            android:textColor="@color/blue"
            android:textSize="20dp"/>
        <ImageButton android:id="@+id/my_account_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="11.67dp"
            android:src="@drawable/accept_plus"
            android:contentDescription="@string/desc"
            android:scaleType="centerInside"
            android:background="@color/dark_grey"
            android:onClick="editButtonClicked"/>
        <ImageButton android:id="@+id/my_account_overflow"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3.67dp"
            android:src="@drawable/navigation_action_overflow"
            android:contentDescription="@string/desc"
            android:scaleType="centerInside"
            android:background="@color/dark_grey"
            android:onClick="overflowButtonClicked"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="432dp"
        android:orientation="vertical"
        android:background="@color/black">
        <ImageView android:id="@+id/my_account_picture"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/contact_default_image"
            android:contentDescription="@string/desc"
            android:scaleType="centerInside"
            android:background="@color/black"/>
        <TextView android:id="@+id/my_account_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="10.67dp"
            android:text="@string/name"
            android:textSize="15dp"
            android:textColor="@color/light_grey"/>
        <TextView android:id="@+id/my_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/name_sample"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/my_account_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/title"
            android:textSize="15dp"
            android:textColor="@color/light_grey"/>
        <TextView android:id="@+id/my_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/title_sample"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/my_account_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/email"
            android:textSize="15dp"
            android:textColor="@color/light_grey"/>
        <TextView android:id="@+id/my_account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/email_sample"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/my_account_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/password"
            android:textSize="15dp"
            android:textColor="@color/light_grey"/>
        <TextView android:id="@+id/my_account_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/password_sample"
            android:textSize="15dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>