<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_marginTop="41.33dp"
        android:layout_width="fill_parent"
        android:layout_height="263.33dp"
        android:orientation="vertical"
        android:background="@color/dark_grey">
        <TextView android:id="@+id/textLabelEmail"
 		    android:layout_marginTop="18dp"
 		    android:layout_marginLeft="46.67dp"
 		    android:layout_width="226.67dp"
 		    android:layout_height="52.33dp"
 		    android:text="@string/email"
 		    android:textSize="38sp"
 		    android:textColor="@color/orange"/>
        <EditText android:id="@+id/editTextEmail" 
			android:layout_marginTop="6dp"
			android:layout_marginLeft="46.67dp" 
			android:layout_width="226.67dp"
			android:layout_height="36dp"
			android:hint="" 
			android:textSize="16sp"/>
 		<TextView android:id="@+id/textLabelPassword"
 		    android:layout_marginTop="24.33dp"
 		    android:layout_marginLeft="46.67dp"
 		    android:layout_width="226.67dp"
 		    android:layout_height="52.33dp"
 		    android:text="@string/password"
 		    android:textSize="38sp"
 		    android:textColor="@color/blue"/>
        <EditText android:id="@+id/editTextPassword"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="46.67dp"
            android:layout_width="226.67dp"
            android:layout_height="36dp"
            android:hint=""
            android:textSize="16sp"
            android:inputType="textPassword"/>
        <Button android:id="@+id/forgotPassword"
            android:layout_marginTop="4.67dp"
            android:layout_marginLeft="45.67dp"
            android:layout_width="156.67dp"
            android:layout_height="20dp"
            android:text="@string/forgot_password"
            android:textColor="@color/off_white"
            android:textSize="16.5sp"
            android:background="@color/dark_grey"
            android:onClick="retrievePassword"/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_marginTop="22.67dp"
      	android:layout_width="fill_parent"
        android:layout_height="58dp">
    	<Button android:id="@+id/signupButton"
    	    android:layout_width="fill_parent"
    	    android:layout_height="fill_parent"
        	android:text="@string/button_signup"
       		android:textColor="@color/green"
        	android:textSize="38sp"
        	android:scaleType="centerInside"
        	android:gravity="center_vertical"
        	android:paddingLeft="46.67dp"
        	android:paddingBottom="8dp"
        	android:background="@color/dark_grey"
        	android:onClick="createAccount"/>
    <ImageView android:id="@+id/signupOverlay" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:src="@drawable/overlay_white" 
			android:contentDescription="@string/desc"
			android:scaleType="fitXY" 
			android:visibility="invisible"/>
    </RelativeLayout>
    
    <ImageView
        android:layout_marginTop="22.67dp"
    	android:layout_width="fill_parent"
		android:layout_height="8dp"
    	android:src="@drawable/separator_bar"
		android:contentDescription="@string/bar"/>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:background="@color/dark_grey">
        <ImageButton android:id="@+id/loginButton"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:scaleType="centerInside" 
            android:src="@drawable/arrow"
            android:contentDescription="@string/goArrow"
            android:background="@color/dark_grey"
            android:onClick="login"/>
        <Button android:id="@+id/loginText"
            android:layout_width="228dp"
            android:layout_height="92dp"
            android:layout_toRightOf="@id/loginButton"
            android:text="@string/login"
            android:textColor="@color/off_white"
            android:textSize="38sp"
            android:gravity="center_vertical"
            android:paddingLeft="9.33dp"
            android:background="@color/light_grey"
            android:onClick="login"/>
        <ImageView android:id="@+id/loginOverlay" 
			android:layout_width="fill_parent" 
			android:layout_height="92dp"
			android:src="@drawable/overlay_white" 
			android:contentDescription="@string/desc"
			android:scaleType="fitXY" 
			android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
