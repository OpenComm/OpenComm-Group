<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/dashboard_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="42.67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/grey_dark" >

        <TextView
            android:id="@+id/dashboardOpenComm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="26.67dp"
            android:text="@string/opencomm"
            android:textColor="@color/off_white_text"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/dashboardOverflowIcon"
            android:layout_width="5.33dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/action_overflow"
            android:onClick="overflow" />

        <ImageView
            android:id="@+id/dashboardNotificationIcon"
            android:layout_width="17.33dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="39.33dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/action_notification"
            android:onClick="notification" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dashboardConfInfoWrapper"
        android:layout_width="103dp"
        android:layout_height="82.67dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/dashboard_actionbar"
        android:layout_marginLeft="49.33dp"
        android:layout_marginTop="75.33dp" >

        <ImageView
            android:id="@+id/icon_confinfo"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_confinfo"
                    android:onClick="goToConfInfo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dashboardConfsWrapper"
        android:layout_width="92dp"
        android:layout_height="82.67dp"
        android:layout_alignTop="@id/dashboardConfInfoWrapper"
        android:layout_below="@id/dashboard_actionbar"
        android:layout_marginLeft="30.33dp"
        android:layout_toRightOf="@id/dashboardConfInfoWrapper" >

        <ImageView
            android:id="@+id/icon_confs"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_confs"
                    android:onClick="goToConfs" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dashboardContactsWrapper"
        android:layout_width="63.33dp"
        android:layout_height="82.67dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/dashboardConfInfoWrapper"
        android:layout_marginLeft="68.33dp"
        android:layout_marginTop="74.67dp" >

        <ImageView
            android:id="@+id/icon_contacts"
            android:layout_width="63.33dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_contacts"
                    android:onClick="goToContacts" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dashboardProfileWrapper"
        android:layout_width="60.75dp"
        android:layout_height="100.21dp"
        android:layout_alignTop="@id/dashboardContactsWrapper"
        android:layout_below="@id/dashboard_actionbar"
        android:layout_marginLeft="66.67dp"
        android:layout_toRightOf="@id/dashboardContactsWrapper" >

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_marginTop="0dp"
            android:layout_width="100.75dp"
            android:layout_height="86dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/desc"
            android:src="@drawable/icon_profile"
            android:onClick="goToProfile" />
    </RelativeLayout>

</RelativeLayout>