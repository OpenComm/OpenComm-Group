<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="42.67dp"
        android:background="@color/dark_grey" >

        <ImageView
            android:id="@+id/contact_card_back_button"
            android:layout_width="8.67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.67dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contacts_back_button_desc"
            android:onClick="backButtonClicked"
            android:src="@drawable/action_arrow" />

        <TextView
            android:id="@+id/contact_card_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:text="@string/contact_name_sample"
            android:textColor="@color/blue_contacts_page_title"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/contact_card_overflow"
            android:layout_width="5.33dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contacts_search_button_desc"
            android:onClick="overflowButtonClicked"
            android:src="@drawable/action_overflow" />

        <ImageView
            android:id="@+id/contact_card_add"
            android:layout_width="21.33dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/contact_card_overflow"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contacts_search_button_desc"
            android:src="@drawable/accept_plus"
            android:onClick="addButtonClicked" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="432dp"
        android:orientation="vertical"
        android:background="@color/black">
        <ImageView android:id="@+id/contact_card_picture"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/contact_default_image"
            android:contentDescription="@string/desc"
            android:scaleType="centerInside"
            android:background="@color/black"/>
        <TextView android:id="@+id/contact_card_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="10.67dp"
            android:text="@string/email"
            android:textSize="18dp"
            android:textColor="@color/light_grey"/>
        <TextView android:id="@+id/contact_card_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/email_sample"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/contact_card_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/phone_number"
            android:textSize="18dp"
            android:textColor="@color/light_grey"/>
        <TextView android:id="@+id/contact_card_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/phone_number_sample"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/contact_card_conferences_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/previous_conferences"
            android:textSize="18dp"
            android:textColor="@color/light_grey"/>
        <TextView android:id="@+id/contact_card_conference1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/conference_sample"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/contact_card_conference2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/conference_sample"
            android:textSize="18dp"
            android:textColor="@color/white"/>
        <TextView android:id="@+id/contact_card_conference3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="1.5dp"
            android:text="@string/conference_sample"
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    
    <Button android:id="@+id/contact_card_block_button"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:text="@string/block"
        android:textSize="18dp"
        android:textColor="@color/orange"
        android:background="@color/darker_grey"
        android:onClick="blockButtonClicked"/>
</LinearLayout>