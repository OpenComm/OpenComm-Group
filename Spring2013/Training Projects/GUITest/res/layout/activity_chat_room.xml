<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
         
       <EditText 
           android:layout_width="fill_parent"
           android:layout_height="180dp"
           android:editable="false"
           android:layout_below = "@+id/name"
           android:gravity="top"
           android:id="@+id/history"
           android:background = "#eeeeee"
           />

       <!--  
       	   <ListView android:layout_width="162dp"   
                  android:layout_height="180dp"
                  android:layout_below = "@+id/history"   
                  android:id="@+id/ChattingListView">  
           </ListView>
           
       	   <ListView android:layout_width="wrap_content"   
                  android:layout_height="180dp"   
                  android:layout_toRightOf="@+id/ChattingListView"
                  android:layout_alignTop="@+id/ChattingListView"
                  android:layout_alignBottom = "@+id/ChattingListView"
                  android:id="@+id/BuddyListView">  
           </ListView>  
