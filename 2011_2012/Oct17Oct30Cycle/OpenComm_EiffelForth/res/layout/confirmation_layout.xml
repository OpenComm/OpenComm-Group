<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/confirmation_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@color/transparent_black">
    <EditText android:textSize="47dp" android:layout_width="wrap_content" android:height="84dp" android:textColor="@color/green" android:text="confirm" android:width="480dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_marginTop="68dp" android:clickable="false" android:cursorVisible="false" android:id="@+id/textboxConfirm" android:paddingLeft="30dp" android:background="@color/dark_grey" android:layout_height="70dp"></EditText>
    <Button android:textColor="@color/blue" android:maxHeight="56dp" android:text="accept" android:id="@+id/buttonAccept" android:textSize="31dp" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_marginBottom="70dp" android:layout_width="158dp" android:clickable="true" android:background="@color/dark_grey" android:layout_height="48dp"></Button>
    <Button android:maxHeight="56dp" android:textSize="31dp" android:layout_alignBaseline="@+id/buttonAccept" android:layout_alignBottom="@+id/buttonAccept" android:layout_alignParentRight="true" android:id="@+id/buttonCancel" android:text="cancel" android:textColor="@color/orange" android:layout_width="158dp" android:clickable="true" android:background="@color/dark_grey" android:layout_height="48dp"></Button>
    <ImageView android:id="@+id/imageView1" android:src="@drawable/nora" android:layout_below="@+id/textboxConfirm" android:layout_alignParentLeft="true" android:layout_marginTop="16dp" android:layout_height="90dp" android:layout_width="90dp" android:layout_marginLeft="35dp"></ImageView>
  </RelativeLayout>