<?xml version="1.0" encoding="utf-8"?>
<manifest 
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="edu.cornell.opencomm" 
	android:versionCode="1"
	android:versionName="1.0">
	
	<uses-sdk 
		android:minSdkVersion="8" />
	<application 
		android:icon="@drawable/icon" 
		android:label="@string/app_name"
		android:theme="@style/offwhiteTheme">
		<activity 
			android:name=".view.LoginView" 
			android:label="@string/app_name" 
			android:screenOrientation="portrait">
			<intent-filter>
				<action 
					android:name="android.intent.action.MAIN" />
				<category 
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity 
			android:name=".controller.MainApplication" 
			android:screenOrientation="portrait"/>
		<activity 
			android:name=".view.DashboardView" 
			android:screenOrientation="portrait"/>
		<activity android:name=".view.ConferencePlannerView"></activity>
		<activity android:name=".view.ConferenceListView"></activity>
	</application>
	
	
	<uses-permission 
		android:name="android.permission.INTERNET" />

</manifest> 