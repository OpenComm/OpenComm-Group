<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:fadingEdge="horizontal"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:background="@color/off_white" >
	<RelativeLayout 
		android:id="@+id/userInputs"
		android:layout_height="266.67dp" 
		android:layout_width="fill_parent"
		android:fadingEdge="horizontal" 
		android:layout_marginTop="41.33dp" 
		android:background="@color/dark_grey">
		<EditText 
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" 
			android:layout_marginTop="63dp"
			android:layout_marginLeft="46.67dp" 
			android:layout_width="232dp"
			android:layout_height="36dp" 
			android:background="@drawable/logintextback"
			android:text="" 
			android:layout_centerVertical="true" 
			android:id="@+id/editTextUsername" 
			android:textSize="25sp" 
			android:paddingLeft="10dp"
            android:inputType="textEmailAddress"/>
		<TextView 
			android:id="@+id/textUsernameAligner"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_alignBottom="@+id/editTextUsername"
			android:layout_alignRight="@+id/editTextUsername"
			android:layout_marginBottom="52dp" 
			android:cursorVisible="false"/>
		<TextView 
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="email" 
			android:textColor="@color/orange"
			android:textSize="38sp" 
			android:id="@+id/textLabelUsername"
			android:layout_alignBaseline="@+id/textUsernameAligner"
			android:layout_alignLeft="@+id/editTextUsername"
			android:cursorVisible="false" 
			android:typeface="sans"/>
		<EditText 
			android:layout_below="@+id/editTextUsername"
			android:layout_alignLeft="@+id/editTextUsername"
			android:layout_marginTop="82.67dp" 
			android:layout_width="232dp"
			android:layout_height="36dp" 
			android:background="@drawable/logintextback"
			android:id="@+id/editTextPassword" 
			android:layout_centerVertical="true" 
			android:inputType="textPassword" 
			android:textSize ="25sp" 
			android:paddingLeft="10dp"/>
		<TextView 
			android:id="@+id/textPasswordAligner"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_alignBottom="@+id/editTextPassword"
			android:layout_alignRight="@+id/editTextPassword"
			android:layout_marginBottom="52dp" 
			android:cursorVisible="false" />
		<TextView 
			android:text="password" 
			android:textSize="38sp"
			android:textColor="@color/blue" 
			android:id="@+id/textLabelPassword"
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:layout_alignBaseline="@+id/textPasswordAligner"
			android:layout_alignLeft="@+id/editTextPassword"
			android:cursorVisible="false" />
		 <TextView 
		     android:text="@string/forgotPassword"
		     android:textSize="15sp"
		     android:textColor="@color/off_white"
		     android:layout_height="wrap_content"
		     android:layout_width="wrap_content"
		     android:layout_alignLeft="@+id/editTextPassword"
		     android:layout_below="@id/editTextPassword"
		     android:id="@+id/passwordRetrieval"
		     android:layout_marginTop="8.7dp"
		     android:onClick="retrievePassword"
		     android:clickable="true"
		     />
	</RelativeLayout>
	<FrameLayout
	    android:id="@+id/signUpFrame"
	    android:layout_height="57dp"
	    android:layout_width="fill_parent"
	     android:layout_marginTop="21dp"
	     android:layout_marginBottom="21dp">
		<Button
	     android:layout_height="fill_parent"
	     android:layout_width="fill_parent"
	     android:text="sign up"
	     android:textSize="38sp"
	     android:textColor="@color/green"
	     android:gravity="left|center_vertical"
	     android:paddingLeft="46dp"
	     android:id="@+id/signUpButton"
	     android:onClick="createAccount" 
	     android:background="@color/dark_grey"/>
		<ImageView
		    android:id="@+id/signUpOverlay"
		    android:layout_height="fill_parent"
		    android:layout_width="fill_parent"
		    android:background="@color/overlay"
		    android:visibility="invisible"/>
	 </FrameLayout>
	<ImageView 
		android:id="@+id/separatorBar" 
		android:layout_width="fill_parent" 
		android:layout_marginTop="1dp" 
		android:layout_height="8dp" 
		android:src="@drawable/separator_bar" 
		android:scaleType="fitXY"/>
	<FrameLayout 
		android:id="@+id/loginBarFrame" 
		android:layout_height="92dp" 
		android:layout_width="fill_parent">
		<RelativeLayout 
			android:id="@+id/loginBar"
			android:layout_height="fill_parent" 
			android:fadingEdge="horizontal" 
			android:layout_width="fill_parent" 
			android:background="@color/dark_grey">
			<ImageButton 
				android:id="@+id/buttonLogin"
				android:layout_width="92dp" 
				android:layout_height="fill_parent"
				android:layout_alignParentBottom="true" 
				android:src="@drawable/arrow"
				android:scaleType="centerInside" 
				android:background="@color/dark_grey" />
			<Button 
				android:cursorVisible="false" 
				android:text="login"
				android:textSize="38sp" 
				android:paddingLeft="9.33dp"
				android:background="@color/light_grey" 
				android:id="@+id/textLogin"
				android:layout_height="fill_parent" 
				android:layout_width="228dp"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true" 
				android:gravity="center_vertical" 
				android:textColor="@color/off_white"/>
		</RelativeLayout>
		<ImageView 
			android:id="@+id/loginOverlay" 
			android:layout_width="fill_parent" 
			android:src="@drawable/overlay_white" 
			android:scaleType="fitXY" 
			android:layout_height="92dp" 
			android:visibility="invisible"/>
	</FrameLayout>
</LinearLayout>