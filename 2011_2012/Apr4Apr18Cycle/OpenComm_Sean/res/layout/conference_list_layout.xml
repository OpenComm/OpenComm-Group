<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">
    <RelativeLayout
        android:paddingLeft="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey">
        <TextView 
    		android:id="@+id/title" 
    		android:text="Opencomm" 
    		android:textColor="@color/off_white"
    		android:layout_height="wrap_content" 
    		android:layout_width="fill_parent"
    		android:background="@color/grey_dark_translucent"
    		android:textSize="28sp"
            android:layout_marginLeft="10dp">
        </TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/happeningNow" 
                android:text="happening now" 
                android:textColor="@color/orange"
                android:layout_height="15dp" 
                android:layout_width="fill_parent"
                android:textSize="10sp"
                android:layout_marginLeft="10dp" android:background="@color/black">
            </TextView>
            <LinearLayout
                android:id="@+id/happeningNowConferences"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue">
            </LinearLayout>
            <TextView
                android:id="@+id/upcoming" 
                android:text="upcoming" 
                android:layout_height="15dp" 
                android:layout_width="fill_parent"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:background="@color/black"
                android:textColor="@color/blue">
            </TextView>
            <LinearLayout
                android:id="@+id/upcomingConferences"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
