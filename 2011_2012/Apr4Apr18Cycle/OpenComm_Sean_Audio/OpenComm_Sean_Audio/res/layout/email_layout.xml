<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black_translucent"
    android:gravity="left"
    android:orientation="vertical" android:paddingBottom="0dp">

    <RelativeLayout
        android:id="@+id/sendInvite"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp" >

        <RelativeLayout
            android:id="@+id/relativeTextLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="68dp" android:layout_alignParentRight="true">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeElements"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeTextLabel" >

            <FrameLayout
                android:id="@+id/confirmBarFrame"
                android:layout_width="fill_parent"
                android:layout_height="37.33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="75dp" >

                <LinearLayout
                    android:id="@+id/confirmBar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/imageSend"
                        android:layout_width="58.67dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="@color/grey_dark_translucent"
                        android:paddingBottom="5.33dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="12dp"
                        android:paddingTop="5.33dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/acceptplus" />

                    <Button
                        android:id="@+id/buttonSend"
                        android:layout_width="101.33dp"
                        android:layout_height="fill_parent"
                        android:background="@color/grey_dark_translucent"
                        android:clickable="true"
                        android:gravity="left|center_vertical"
                        android:text="send"
                        android:textColor="@color/blue"
                        android:textSize="25sp" />

                    <ImageButton
                        android:id="@+id/imageCancel"
                        android:layout_width="57.33dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="@color/grey_dark_translucent"
                        android:paddingBottom="7.665dp"
                        android:paddingLeft="22dp"
                        android:paddingRight="13.33dp"
                        android:paddingTop="7.665dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/cancelx" />

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="102.67dp"
                        android:layout_height="fill_parent"
                        android:background="@color/grey_dark_translucent"
                        android:clickable="true"
                        android:gravity="left|center_vertical"
                        android:text="cancel"
                        android:textColor="@color/orange"
                        android:textSize="25sp" />
                </LinearLayout>
				<LinearLayout
                   	android:id="@+id/sendOverlayFrame"
                   	android:layout_width="fill_parent"
                   	android:layout_height="fill_parent"
                   	android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/sendOverlay"
                        android:layout_width="160dp"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/overlay_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cancelOverlay"
                        android:layout_width="160dp"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/overlay_white"
                        android:visibility="invisible" />
              	</LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:padding="0dp"
                android:text="email"
                android:textColor="@color/off_white"
                android:textSize="22dp" >
            </TextView>

            <EditText
                android:id="@+id/emailBox"
                android:layout_width="200dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/emailText"
                android:layout_below="@+id/emailText"
                android:background="@drawable/logintextback"
                android:ems="10"
                android:padding="0dp"
                android:paddingLeft="15dp" />

        </RelativeLayout>

        <TextView android:textColor="@color/green" android:layout_height="66dp" android:gravity="center_vertical" android:textSize="40dp" android:background="@color/grey_dark_translucent" android:paddingBottom="0dp" android:text="send invite" android:paddingLeft="44dp" android:layout_width="fill_parent" android:clickable="false" android:id="@+id/signupTitle" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>

    </RelativeLayout>

</LinearLayout>