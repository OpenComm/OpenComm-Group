<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black_translucent"
    android:gravity="left"
    android:orientation="vertical" android:paddingBottom="0dp">

    <RelativeLayout
        android:id="@+id/infoSignup"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp" >

        <RelativeLayout
            android:id="@+id/relativeTextLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="68dp" android:layout_alignParentRight="true">
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/relativeElements"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeTextLabel" >

            <FrameLayout
                android:id="@+id/confirmBarFrame"
                android:layout_width="fill_parent"
                android:layout_height="37.33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="50dp" >

                <LinearLayout
                    android:id="@+id/confirmBar"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/imageCreate"
                        android:layout_width="58.67dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="@color/grey_dark_translucent"
                        android:paddingBottom="5.33dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="12dp"
                        android:paddingTop="5.33dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/acceptplus" />

                    <Button
                        android:id="@+id/buttonCreate"
                        android:layout_width="101.33dp"
                        android:layout_height="fill_parent"
                        android:background="@color/grey_dark_translucent"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:gravity="left|center_vertical"
                        android:text="save"
                        android:textColor="@color/blue"
                        android:textSize="25sp" />

                    <ImageButton
                        android:id="@+id/imageCancel"
                        android:layout_width="57.33dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:background="@color/grey_dark_translucent"
                        android:paddingBottom="7.665dp"
                        android:paddingLeft="22dp"
                        android:paddingRight="13.33dp"
                        android:paddingTop="7.665dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/cancelx" />

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="102.67dp"
                        android:layout_height="fill_parent"
                        android:background="@color/grey_dark_translucent"
                        android:clickable="true"
                        android:cursorVisible="false"
                        android:gravity="left|center_vertical"
                        android:text="cancel"
                        android:textColor="@color/orange"
                        android:textSize="25sp" />
                </LinearLayout>
                <LinearLayout
                   	android:id="@+id/confirmOverlay"
                   	android:layout_width="fill_parent"
                   	android:layout_height="fill_parent"
                   	android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/createOverlay"
                        android:layout_width="160dp"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/overlay_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/cancelOverlay"
                        android:layout_width="160dp"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/overlay_white"
                        android:visibility="invisible" />
              	</LinearLayout>
            </FrameLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="337dp" android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:text="first name"
            android:textSize="22dp"
            android:id="@+id/firstNameText"
            android:textColor="@color/off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginLeft="53dp">
        </TextView>

        <EditText
            android:id="@+id/firstNameBox"
            android:layout_height="27dp"
            android:layout_alignLeft="@+id/firstNameText"
            android:layout_marginRight="55dp"
            android:background="@drawable/logintextback"
            android:padding="0dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="53dp"
            android:layout_width="211dp">
        </EditText>

        <TextView
            android:id="@+id/lastNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last name"
            android:textColor="@color/off_white"
            android:textSize="22dp"
            android:layout_marginLeft="53dp">
        </TextView>

        <EditText
            android:id="@+id/lastNameBox"
            android:layout_height="27dp"
            android:layout_alignLeft="@+id/lastNameText"
            android:layout_alignRight="@+id/firstNameBox"
            android:layout_below="@+id/lastNameText"
            android:background="@drawable/logintextback"
            android:padding="0dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="53dp"
            android:layout_width="211dp">
        </EditText>
        
        <TextView
            android:id="@+id/passwordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/titleBox"
            android:layout_below="@+id/titleBox"
            android:padding="0dp"
            android:text="password"
            android:textColor="@color/off_white"
            android:textSize="22dp"
            android:layout_marginLeft="53dp"/>

        <EditText
            android:id="@+id/passwordBox"
            android:password="true"
            android:layout_height="27dp"
            android:background="@drawable/logintextback"
            android:padding="0dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="53dp" 
            android:layout_width="211dp"/>
            
        <TextView 
            android:text="confirm password" 
            android:textSize="22dp" 
            android:id="@+id/TextView02" 
            android:textColor="@color/off_white" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:padding="0dp" 
            android:layout_marginLeft="53dp"/>
        
        <EditText 
            android:paddingLeft="15dp" 
            android:background="@drawable/logintextback" 
            android:password="true" 
            android:layout_height="27dp" 
            android:id="@+id/confirmPasswordBox" 
            android:padding="0dp" 
            android:layout_marginLeft="53dp"
            android:layout_width="211dp"/>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lastNameBox"
            android:layout_below="@+id/lastNameBox"
            android:text="email"
            android:textColor="@color/off_white"
            android:textSize="22dp"
            android:layout_marginLeft="53dp">
        </TextView>

        <EditText
            android:id="@+id/emailBox"
            android:layout_height="27dp"
            android:layout_alignLeft="@+id/emailText"
            android:layout_alignRight="@+id/lastNameBox"
            android:layout_below="@+id/emailText"
            android:background="@drawable/logintextback"
            android:padding="0dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="53dp" android:layout_width="211dp">
        </EditText>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailBox"
            android:layout_below="@+id/emailBox"
            android:padding="0dp"
            android:text="title"
            android:textColor="@color/off_white"
            android:textSize="22dp"
            android:layout_marginLeft="53dp">
        </TextView>

        <EditText
            android:id="@+id/titleBox"
            android:layout_height="27dp"
            android:layout_alignLeft="@+id/titleText"
            android:layout_alignRight="@+id/emailBox"
            android:layout_below="@+id/titleText"
            android:background="@drawable/logintextback"
            android:padding="0dp"
            android:paddingLeft="15dp"
            android:layout_marginLeft="53dp" android:layout_width="211dp">
        </EditText>

        <TextView 
            android:text="photo" 
            android:textSize="22dp" 
            android:id="@+id/photoText"
            android:textColor="@color/off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmPasswordBox"
            android:layout_alignLeft="@+id/confirmPasswordBox"
            android:layout_marginLeft="53dp">
        </TextView>

        <ImageView
            android:id="@+id/photoButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/photoText"
            android:layout_below="@+id/photoText"
            android:scaleType="centerInside"
            android:src="@drawable/imagearrow"
            android:layout_marginLeft="53dp"
            />
            



</LinearLayout>

            </ScrollView>

        </RelativeLayout>


        <TextView android:textColor="@color/green" android:layout_height="66dp" android:gravity="center_vertical" android:textSize="40dp" android:background="@color/grey_dark_translucent" android:paddingBottom="0dp" android:text="@string/signup" android:paddingLeft="44dp" android:layout_width="fill_parent" android:cursorVisible="false" android:clickable="false" android:id="@+id/signupTitle" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>

    </RelativeLayout>
    


</LinearLayout>