    <EditText android:layout_width="wrap_content" android:layout_height="70dp" android:paddingLeft="30dp" android:textColor="@color/green" android:height="84dp" android:id="@+id/textViewBlank" android:cursorVisible="false" android:width="100dp" android:textSize="47dp" android:clickable="false" android:background="@color/dark_grey" android:layout_alignBottom="@+id/buttonAcceptTip" android:layout_alignTop="@+id/buttonAcceptTip" android:layout_alignParentRight="true" android:layout_toRightOf="@+id/buttonAcceptTip"></EditText>
  </RelativeLayout>
