<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/tip_view"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="@color/black_translucent" android:fadingEdge="horizontal">
    <EditText android:layout_width="wrap_content" android:height="84dp" android:textColor="@color/green" android:width="480dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:clickable="false" android:cursorVisible="false" android:paddingLeft="30dp" android:background="@color/dark_grey" android:id="@+id/textLabelTip" android:text="tip" android:textSize="40dp" android:layout_marginTop="85dp" android:layout_height="60dp"></EditText>
