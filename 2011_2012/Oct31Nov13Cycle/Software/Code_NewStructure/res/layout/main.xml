<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main_screen"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="25"
    >
    <edu.cornell.opencomm.view.SpaceView android:layout_height="wrap_content" android:id="@+id/space_view" android:layout_weight="24" android:background="@color/off_white" android:layout_width="fill_parent">
        <View android:layout_width="fill_parent" android:id="@+id/border_top" android:layout_height="10dp"></View>
    </edu.cornell.opencomm.view.SpaceView>
    <ImageView
      android:layout_width="fill_parent"
      android:layout_height="12px"
      android:background="@color/darkgray"
      android:src="@drawable/sexy_bar">
   </ImageView>    
    <LinearLayout
    android:id="@+id/bottom_bar"
    android:background="@color/gray"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"
    >
    	<Button android:id="@+id/main_button"
    		android:padding="5dip"
    		android:text="@string/main_button_text"
    		android:layout_width="wrap_content"
    		android:layout_height="fill_parent" 
    		android:layout_weight="1"
    		android:minWidth="80dip"
    		android:textColor="@color/off_white"
    		android:textSize="45px"
    	    android:typeface="monospace"
    	    android:background="@drawable/main_button_style"
    		/>
    	<HorizontalScrollView 
    			android:layout_width="wrap_content"
	    		android:layout_height="fill_parent"
	    		android:layout_weight="3"
	    		android:measureAllChildren="false"
	    		android:background="@color/light_grey" 
	    		android:paddingLeft="12px" >
	    		<LinearLayout android:id="@+id/privateSpaceLinearLayout"
    			android:padding="12px"
	    		android:layout_width="wrap_content"
	    		android:layout_height="fill_parent"
    			android:gravity="center" >
    			
    			</LinearLayout>
	    </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
